animations {
    workspace-switch {
        spring damping-ratio=0.7 stiffness=1000 epsilon=0.0001
    }

    window-open {
        duration-ms 400
        curve "cubic-bezier" 0.05 0.7 0.1 1.0
    }

    window-close {
        duration-ms 200
        curve "cubic-bezier" 0.3 0.0 0.8 0.15
    }

    horizontal-view-movement {
        spring damping-ratio=0.8 stiffness=900 epsilon=0.0001
    }

    window-movement {
        spring damping-ratio=0.7 stiffness=800 epsilon=0.0001
    }

    window-resize {
        spring damping-ratio=0.8 stiffness=800 epsilon=0.0001
    }

    config-notification-open-close {
        spring damping-ratio=0.6 stiffness=1000 epsilon=0.001
    }
    
    screenshot-ui-open {
        duration-ms 200
        curve "ease-out-quad"
    }
}